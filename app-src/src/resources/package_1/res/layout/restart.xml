<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ota="http://schemas.android.com/apk/res-auto">
  <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/heading_margin">
    <ImageView android:layout_gravity="center_vertical"
               android:id="@id/imgBack"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_ab_back_material"
               android:tint="@color/black"
               android:paddingHorizontal="@dimen/heading_margin_menu"
               android:paddingVertical="@dimen/heading_margin_menu" />
    <TextView android:theme="@style/TextAppearance.TitleBarBlackText"
              android:layout_gravity="center_vertical"
              android:id="@id/head_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/vital_updates_margin" />
  </LinearLayout>
  <ScrollView android:scrollbarStyle="outsideOverlay"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/list_starting_padding_top"
              android:layout_weight="1.0">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/activity_left_margin"
                  android:layout_marginEnd="@dimen/activity_right_margin">
      <LinearLayout android:id="@id/su_update"
                    android:background="@drawable/rounded_top_corners"
                    android:paddingTop="@dimen/scroll_padding"
                    android:paddingBottom="@dimen/scroll_padding"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center_vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_security_update_good_black_24dp"
                   android:layout_marginStart="@dimen/heading_margin_menu"
                   android:layout_marginEnd="@dimen/vital_updates_margin" />
        <LinearLayout android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
          <TextView android:textStyle="bold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/please_restart"
                    android:layout_marginStart="@dimen/scroll_padding"
                    android:layout_marginEnd="@dimen/activity_right_margin"
                    style="@style/TextAppearance.MaterialComponents.Headline6" />
          <TextView android:id="@id/ab_install_version"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/scroll_padding"
                    android:layout_marginEnd="@dimen/activity_right_margin"
                    style="@style/TextAppearance.MaterialComponents.Body2" />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout android:orientation="vertical"
                    android:background="@drawable/rounded_bottom_corners_background"
                    android:paddingTop="@dimen/list_starting_padding_top"
                    android:paddingBottom="@dimen/list_starting_padding_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
        <TextView android:gravity="center"
                  android:id="@id/ab_restart_warn_text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/ab_restart_text"
                  android:layout_marginStart="@dimen/list_padding_top"
                  android:layout_marginEnd="@dimen/list_padding_top"
                  style="@style/TextAppearance.MaterialComponents.Body2" />
        <TextView android:textColor="@color/red"
                  android:gravity="center"
                  android:id="@id/ab_restart_critical_prompt"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/list_starting_padding_top"
                  android:layout_marginStart="@dimen/list_padding_top"
                  android:layout_marginEnd="@dimen/list_padding_top"
                  style="@style/TextAppearance.MaterialComponents.Body2" />
        <TextView android:gravity="center"
                  android:id="@id/predownloadnotes"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/layout_margin_top"
                  android:layout_marginStart="@dimen/vital_updates_progressbar_padding_top"
                  android:layout_marginEnd="@dimen/vital_updates_progressbar_padding_top"
                  style="@style/TextAppearance.MaterialComponents.Body2" />
      </LinearLayout>
      <LinearLayout android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/heading_margin"
                    android:layout_marginStart="@dimen/list_starting_padding_top"
                    android:layout_marginEnd="@dimen/textview_margin_start">
        <TextView android:id="@id/expTitle"
                  android:visibility="gone"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/layout_margin_top"
                  style="@style/TextAppearance.MaterialComponents.Subtitle2" />
        <View android:id="@id/dash_line"
              android:background="?android:attr/dividerVertical"
              android:visibility="gone"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/view_height"
              android:layout_marginTop="@dimen/vital_updates_body_margin_top"
              android:layout_marginStart="@dimen/scroll_padding" />
      </LinearLayout>
      <TextView android:gravity="fill_horizontal"
                android:id="@id/emergency_call_text"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_starting_padding_top"
                android:text="@string/emergency_call_text"
                android:layout_marginStart="@dimen/list_starting_padding_top"
                android:layout_marginEnd="@dimen/scroll_padding"
                style="@style/TextAppearance.MaterialComponents.Body2" />
      <TextView android:id="@id/restartoptionsnotes"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/list_starting_padding_top"
                android:paddingEnd="@dimen/scroll_padding"
                android:layout_marginStart="@dimen/list_starting_padding_top"
                android:layout_marginEnd="@dimen/scroll_padding"
                style="@style/TextAppearance.MaterialComponents.Body2" />
      <ExpandableListView android:id="@id/expandableListView"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_marginTop="@dimen/switch_padding"
                          android:divider="@android:color/darker_gray"
                          android:dividerHeight="0.0dp"
                          android:layoutDirection="rtl"
                          android:layout_marginStart="@dimen/scroll_padding"
                          android:layout_marginEnd="@dimen/list_starting_padding_top"
                          android:indicatorEnd="?android:attr/expandableListPreferredItemIndicatorRight" />
      <TextView android:id="@id/os_release_notes"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:layout_marginStart="@dimen/list_starting_padding_top"
                android:layout_marginEnd="@dimen/list_starting_padding_top"
                style="@style/TextAppearance.MaterialComponents.Body2" />
      <TextView android:id="@id/instruction_title"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:text="@string/restart_instruction_title"
                android:layout_marginStart="@dimen/list_starting_padding_top"
                android:layout_marginEnd="@dimen/list_starting_padding_top"
                style="@style/TextAppearance.MaterialComponents.Subtitle2" />
      <LinearLayout android:orientation="vertical"
                    android:id="@id/instruction"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/list_starting_padding_top"
                    android:layout_marginEnd="@dimen/list_starting_padding_top" />
    </LinearLayout>
  </ScrollView>
  <LinearLayout android:layout_gravity="end"
                android:orientation="horizontal"
                android:paddingTop="@dimen/switch_padding"
                android:paddingBottom="@dimen/button_bottom_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_left_margin"
                android:layout_marginEnd="@dimen/activity_right_margin"
                android:elevation="@dimen/elevation_size">
    <Button android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="bottom|center|end"
            android:id="@id/restart_later"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/restart_later"
            android:layout_weight="1.0"
            android:layout_marginEnd="@dimen/layout_margin_padding"
            ota:cornerRadius="@dimen/button_corner_radius"
            style="@style/MaterialButtonNoStyle" />
    <Button android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="bottom|center|end"
            android:id="@id/restart_cancel"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel_install"
            android:layout_weight="1.0"
            android:layout_marginEnd="@dimen/layout_margin_padding"
            ota:cornerRadius="@dimen/button_corner_radius"
            style="@style/MaterialButtonNoStyle" />
    <com.google.android.material.button.MaterialButton android:gravity="center"
                          android:layout_gravity="bottom|center|end"
                          android:id="@id/restart_now"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/restart_now"
                          android:layout_weight="1.0"
                          ota:cornerRadius="@dimen/button_corner_radius"
                          style="@style/MaterialButtonColoredStyle" />
  </LinearLayout>
</LinearLayout>