<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ota="http://schemas.android.com/apk/res-auto">
  <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/heading_margin">
    <ImageView android:layout_gravity="center_vertical"
               android:id="@id/imgBack"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_ab_back_material"
               android:tint="@color/black"
               android:paddingHorizontal="@dimen/heading_margin_menu"
               android:paddingVertical="@dimen/heading_margin_menu" />
    <TextView android:theme="@style/TextAppearance.TitleBarBlackText"
              android:layout_gravity="center_vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/system_update" />
  </LinearLayout>
  <ScrollView android:scrollbarSize="@dimen/scrollbar_size"
              android:scrollbarStyle="outsideOverlay"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/list_starting_padding_top"
              android:layout_weight="1.0"
              android:fadeScrollbars="false">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/activity_left_margin"
                  android:layout_marginEnd="@dimen/activity_right_margin">
      <LinearLayout android:id="@id/su_update"
                    android:background="@drawable/rounded_top_corners"
                    android:paddingTop="@dimen/scroll_padding"
                    android:paddingBottom="@dimen/scroll_padding"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center_vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_security_update_good_black_24dp"
                   android:layout_marginStart="@dimen/paragraph_spacing"
                   android:layout_marginEnd="@dimen/activity_left_margin" />
        <TextView android:textStyle="bold"
                  android:id="@id/txtMergeStatusTitle"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/merge_restart_title"
                  android:layout_marginStart="@dimen/scroll_padding"
                  android:layout_marginEnd="@dimen/activity_right_margin"
                  style="@style/TextAppearance.MaterialComponents.Headline6" />
      </LinearLayout>
      <LinearLayout android:orientation="vertical"
                    android:background="@drawable/rounded_bottom_corners_background"
                    android:paddingTop="@dimen/list_starting_padding_top"
                    android:paddingBottom="@dimen/list_starting_padding_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
        <TextView android:gravity="center"
                  android:id="@id/txtMergeWarnText"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/merge_restart_text"
                  android:paddingStart="@dimen/list_padding_top"
                  android:paddingEnd="@dimen/list_padding_top"
                  style="@style/TextAppearance.MaterialComponents.Body2" />
        <TextView android:textColor="@color/red"
                  android:gravity="center"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/list_starting_padding_top"
                  android:text="@string/merge_force_restart_text"
                  android:layout_marginStart="@dimen/list_padding_top"
                  android:layout_marginEnd="@dimen/list_padding_top"
                  style="@style/TextAppearance.MaterialComponents.Body2" />
      </LinearLayout>
      <TextView android:gravity="fill_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_starting_padding_top"
                android:text="@string/merge_emergency_call_text"
                android:layout_marginStart="@dimen/list_starting_padding_top"
                android:layout_marginEnd="@dimen/list_starting_padding_top"
                style="@style/TextAppearance.MaterialComponents.Body2" />
    </LinearLayout>
  </ScrollView>
  <com.google.android.material.button.MaterialButton android:gravity="center"
                        android:layout_gravity="bottom|center|end"
                        android:id="@id/restart_now"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/button_top_padding"
                        android:layout_marginBottom="@dimen/button_bottom_padding"
                        android:text="@string/restart_now"
                        android:layout_marginStart="@dimen/activity_left_margin"
                        android:layout_marginEnd="@dimen/activity_right_margin"
                        android:elevation="@dimen/elevation_size"
                        ota:cornerRadius="@dimen/button_corner_radius"
                        style="@style/MaterialButtonColoredStyle" />
</LinearLayout>