<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ota="http://schemas.android.com/apk/res-auto">
  <LinearLayout android:orientation="horizontal"
                android:id="@id/update_history_toolbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/heading_margin">
    <ImageView android:layout_gravity="center_vertical"
               android:id="@id/imgBack"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_ab_back_material"
               android:tint="@color/black"
               android:paddingHorizontal="@dimen/heading_margin_menu"
               android:paddingVertical="@dimen/heading_margin_menu" />
    <TextView android:theme="@style/TextAppearance.TitleBarBlackText"
              android:layout_gravity="center_vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/system_update"
              android:layout_marginStart="@dimen/vital_updates_margin" />
  </LinearLayout>
  <ScrollView android:scrollbarStyle="outsideOverlay"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/list_starting_padding_top"
              android:layout_weight="1.0">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_marginStart="@dimen/activity_left_margin"
                  android:layout_marginEnd="@dimen/activity_right_margin">
      <LinearLayout android:id="@id/su_update"
                    android:background="@drawable/rounded_top_corners"
                    android:paddingTop="@dimen/scroll_padding"
                    android:paddingBottom="@dimen/scroll_padding"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center_vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_security_update_good_black_24dp"
                   android:layout_marginStart="@dimen/heading_margin_menu"
                   android:layout_marginEnd="@dimen/vital_updates_margin" />
        <LinearLayout android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
          <TextView android:textStyle="bold"
                    android:paddingBottom="@dimen/scrollbar_size"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update_info"
                    android:layout_marginStart="@dimen/scroll_padding"
                    android:layout_marginEnd="@dimen/activity_right_margin"
                    style="@style/TextAppearance.MaterialComponents.Headline6" />
          <TextView android:id="@id/install_version"
                    android:paddingBottom="@dimen/button_top_padding"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/scroll_padding"
                    android:layout_marginEnd="@dimen/activity_right_margin"
                    style="@style/TextAppearance.MaterialComponents.Body2" />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout android:orientation="vertical"
                    android:background="@drawable/rounded_bottom_corners_background"
                    android:paddingTop="@dimen/elevation_size"
                    android:paddingBottom="@dimen/list_starting_padding_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
        <TextView android:textStyle="bold"
                  android:gravity="center"
                  android:id="@id/install_percentage"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/scroll_padding"
                  android:layout_marginStart="@dimen/vital_updates_progressbar_padding_top"
                  android:layout_marginEnd="@dimen/vital_updates_progressbar_padding_top"
                  style="@style/TextAppearance.MaterialComponents.Headline6" />
        <TextView android:gravity="center"
                  android:id="@id/install_step"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/vital_updates_progressbar_padding_top"
                  android:layout_marginEnd="@dimen/vital_updates_progressbar_padding_top"
                  style="@style/TextAppearance.MaterialComponents.Subtitle2" />
        <ProgressBar android:gravity="center"
                     android:id="@id/progressBar"
                     android:visibility="gone"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/scroll_padding"
                     android:max="100"
                     android:progress="0"
                     android:layout_marginStart="@dimen/vital_updates_progressbar_padding_top"
                     android:layout_marginEnd="@dimen/vital_updates_progressbar_padding_top"
                     android:progressTint="@color/colorPrimaryDark"
                     style="?android:attr/progressBarStyleHorizontal" />
        <TextView android:textSize="@dimen/message_text"
                  android:gravity="center"
                  android:id="@id/bg_install_message"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/scroll_padding"
                  android:layout_marginStart="@dimen/vital_updates_title_margin_top"
                  android:layout_marginEnd="@dimen/vital_updates_title_margin_top"
                  style="@style/TextAppearance.MaterialComponents.Body2" />
      </LinearLayout>
      <LinearLayout android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/heading_margin"
                    android:layout_marginStart="@dimen/list_starting_padding_top"
                    android:layout_marginEnd="@dimen/textview_margin_start">
        <TextView android:id="@id/expTitle"
                  android:visibility="gone"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/layout_margin_top"
                  style="@style/TextAppearance.MaterialComponents.Subtitle2" />
        <View android:id="@id/dash_line"
              android:background="?android:attr/dividerVertical"
              android:visibility="gone"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/view_height"
              android:layout_marginTop="@dimen/vital_updates_body_margin_top"
              android:layout_marginStart="@dimen/scroll_padding" />
      </LinearLayout>
      <ExpandableListView android:id="@id/expandableListView"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_marginTop="@dimen/switch_padding"
                          android:divider="@android:color/darker_gray"
                          android:dividerHeight="0.0dp"
                          android:layoutDirection="rtl"
                          android:layout_marginStart="@dimen/scroll_padding"
                          android:layout_marginEnd="@dimen/list_starting_padding_top"
                          android:indicatorEnd="?android:attr/expandableListPreferredItemIndicatorRight" />
      <TextView android:id="@id/os_release_notes"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:layout_marginStart="@dimen/list_starting_padding_top"
                android:layout_marginEnd="@dimen/list_starting_padding_top"
                style="@style/TextAppearance.MaterialComponents.Body2" />
    </LinearLayout>
  </ScrollView>
  <LinearLayout android:gravity="end"
                android:orientation="horizontal"
                android:id="@id/button_layout"
                android:paddingTop="@dimen/switch_padding"
                android:paddingBottom="@dimen/button_bottom_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_left_margin"
                android:layout_marginEnd="@dimen/activity_right_margin"
                android:elevation="@dimen/elevation_size">
    <Button android:gravity="center"
            android:layout_gravity="bottom|center|end"
            android:id="@id/cancel"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_weight="1.0"
            android:paddingStart="@dimen/button_left_padding"
            android:paddingEnd="@dimen/button_right_padding"
            android:layout_marginEnd="@dimen/layout_margin_padding"
            style="@style/MaterialButtonNoStyle" />
    <Button android:textStyle="bold"
            android:gravity="center"
            android:id="@id/wifi_settings"
            android:background="@drawable/button_outline"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/check_wifi_settings"
            android:layout_weight="1.0"
            android:paddingStart="@dimen/button_left_padding"
            android:paddingEnd="@dimen/button_right_padding"
            style="@style/TextAppearance.Primary" />
    <com.google.android.material.button.MaterialButton android:gravity="center"
                          android:id="@id/cellular_resume"
                          android:visibility="gone"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/resume_download_on_cellular"
                          android:layout_weight="1.0"
                          ota:cornerRadius="@dimen/button_corner_radius"
                          style="@style/MaterialButtonColoredStyle" />
    <com.google.android.material.button.MaterialButton android:gravity="center"
                          android:layout_gravity="bottom|center|end"
                          android:id="@id/done"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/got_it"
                          android:layout_weight="1.0"
                          ota:cornerRadius="@dimen/button_corner_radius"
                          style="@style/MaterialButtonColoredStyle" />
  </LinearLayout>
</LinearLayout>