<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:id="@id/update_prefs_toolbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center_vertical"
               android:id="@id/imgBack"
               android:padding="@dimen/heading_margin_menu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_ab_back_material"
               android:tint="@color/white" />
    <TextView android:theme="@style/TextAppearance.TitleBarText"
              android:layout_gravity="center_vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/update_preference" />
  </LinearLayout>
  <LinearLayout android:orientation="horizontal"
                android:id="@id/update_history_toolbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/heading_margin_menu">
    <ImageView android:layout_gravity="center_vertical"
               android:id="@id/back"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_ab_back_material"
               android:tint="@color/black"
               android:paddingHorizontal="@dimen/heading_margin_menu"
               android:paddingVertical="@dimen/heading_margin_menu" />
  </LinearLayout>
  <androidx.core.widget.NestedScrollView android:scrollbarStyle="outsideOverlay"
                        android:paddingTop="@dimen/layout_margin_top"
                        android:paddingBottom="@dimen/layout_margin_bottom"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/layout_margin_top"
                  android:layout_marginStart="@dimen/heading_margin"
                  android:layout_marginEnd="@dimen/heading_margin">
      <TextView android:textAppearance="@style/TextAppearance.BigTitleBarText"
                android:paddingTop="@dimen/menu_icon_margin_end"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/system_update"
                android:layout_marginStart="@dimen/textview_margin_start"
                android:layout_marginEnd="@dimen/layout_margin" />
      <TextView android:textAppearance="@style/MenuStatusTitleTheme"
                android:paddingTop="@dimen/button_top_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/system_update_desc"
                android:layout_marginStart="@dimen/textview_margin_start"
                android:layout_marginEnd="@dimen/list_padding_top" />
      <LinearLayout android:id="@id/su_update"
                    android:background="@drawable/update_status_background"
                    android:paddingTop="@dimen/scroll_padding"
                    android:paddingBottom="@dimen/scroll_padding"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_padding_top"
                    android:paddingStart="@dimen/lenovo_branding_img_padding">
        <ImageView android:layout_gravity="center_vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_security_update_good_black_24dp"
                   android:layout_marginEnd="@dimen/button_left_padding" />
        <LinearLayout android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
          <TextView android:textAppearance="@style/TextAppearance.TitleBarBlackText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/system_update_status" />
          <TextView android:theme="@style/TextAppearance.Body.Roboto_Medium"
                    android:id="@id/su_update_title"
                    android:paddingTop="@dimen/list_group_padding_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_updates_applied"
                    android:layout_below="@id/su_update_heading"
                    android:layout_marginEnd="@dimen/scroll_padding"
                    style="@style/MenuSubTitleTheme" />
          <TextView android:id="@id/su_update_summary"
                    android:paddingTop="@dimen/list_item_padding_bottom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/su_update_title"
                    android:layout_marginEnd="@dimen/scroll_padding"
                    style="@style/MenuSubTitleTheme" />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout android:id="@id/check_for_updates_layout"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_padding_top"
                    android:paddingStart="@dimen/lenovo_branding_img_padding">
        <ImageView android:layout_gravity="center_vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_security_update_good_black_24dp"
                   android:layout_marginEnd="@dimen/button_left_padding" />
        <LinearLayout android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
          <TextView android:textAppearance="@style/TextAppearance.TitleBarBlackText"
                    android:id="@id/check_for_updates"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_for_updates_title" />
          <TextView android:id="@id/txtChkDisabledITAdmin"
                    android:paddingTop="@dimen/list_group_padding_top"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_update_disabled_admin" />
        </LinearLayout>
      </LinearLayout>
      <TextView android:textAppearance="@style/TextAppearance.TitleBarBlackText"
                android:id="@id/txtAutoDownloadSettings"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_padding_top"
                android:text="@string/auto_download_settings_title"
                android:drawablePadding="@dimen/paragraph_spacing"
                android:drawableStart="@drawable/auto_download_settings_icon"
                android:layout_marginStart="@dimen/activity_left_margin"
                android:layout_marginEnd="@dimen/heading_margin_menu" />
      <LinearLayout android:id="@id/lnrSmartUpdateParent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_padding_top"
                    android:paddingStart="@dimen/checkbox_padding_start">
        <ImageView android:layout_gravity="center_vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/smart_updates_icon"
                   android:layout_marginEnd="@dimen/button_left_padding" />
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
          <LinearLayout android:orientation="vertical"
                        android:id="@id/lnrSmartUpdate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:layout_marginStart="@dimen/scrollbar_size">
            <TextView android:textAppearance="@style/TextAppearance.TitleBarBlackText"
                      android:layout_gravity="center_vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/smart_update_title" />
            <TextView android:id="@id/txtUpdatePrefText"
                      android:paddingTop="@dimen/list_group_padding_top"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/smart_settings_string"
                      android:layout_marginStart="@dimen/caption_margin"
                      style="@style/MenuSubTitleTheme" />
          </LinearLayout>
          <View android:background="?android:attr/dividerVertical"
                android:layout_width="@dimen/view_vertical_width"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/vital_updates_margin"
                android:layout_marginBottom="@dimen/menu_icon_margin_end"
                android:layout_marginStart="@dimen/vital_updates_margin" />
          <Switch android:layout_gravity="center|right"
                  android:id="@id/switchSmartUpdate"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/activity_left_margin"
                  style="@style/Switch.Settings" />
        </LinearLayout>
      </LinearLayout>
      <TextView android:textAppearance="@style/TextAppearance.TitleBarBlackText"
                android:id="@id/history_prefs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_padding_top"
                android:text="@string/update_history_title"
                android:drawablePadding="@dimen/button_left_padding"
                android:drawableStart="@drawable/ic_history_black_24dp"
                android:paddingStart="@dimen/activity_left_margin" />
    </LinearLayout>
  </androidx.core.widget.NestedScrollView>
</LinearLayout>