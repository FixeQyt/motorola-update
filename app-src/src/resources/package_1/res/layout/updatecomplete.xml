<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ota="http://schemas.android.com/apk/res-auto">
  <ScrollView android:scrollbarStyle="outsideOverlay"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_weight="1.0">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/paragraph_spacing"
                  android:layout_marginEnd="@dimen/paragraph_spacing">
      <com.airbnb.lottie.LottieAnimationView android:id="@id/lAnimation"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true" />
      <TextView android:textSize="@dimen/title_text"
                android:gravity="center"
                android:id="@id/update_complete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/update_title"
                style="@style/TextAppearance.HeadingStyle" />
      <TextView android:gravity="center"
                android:id="@id/txtLatestSW"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_starting_padding_top"
                android:text="@string/android_latest_sw_text"
                style="@style/TextAppearance.MaterialComponents.Body2" />
      <LinearLayout android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_marginStart="@dimen/menu_icon_margin_end"
                    android:layout_marginEnd="@dimen/menu_icon_margin_end">
        <TextView android:gravity="center|left"
                  android:id="@id/android_version"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/drawablePadding"
                  android:text="@string/android_version"
                  style="@style/TextAppearance.MaterialComponents.Body2" />
        <TextView android:gravity="center|left"
                  android:id="@id/update_status_desc"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/current_version"
                  style="@style/TextAppearance.MaterialComponents.Body2" />
        <TextView android:gravity="center|left"
                  android:id="@id/security_patch"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/security_patch"
                  style="@style/TextAppearance.MaterialComponents.Body2" />
        <TextView android:id="@id/postinstallnote"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  style="@style/TextAppearance.MaterialComponents.Body2" />
        <LinearLayout android:layout_gravity="center"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
          <TextView android:id="@id/expTitle"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2" />
          <View android:id="@id/dash_line"
                android:background="?android:attr/dividerVertical"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_height"
                android:layout_marginTop="@dimen/vital_updates_body_margin_top"
                android:layout_marginStart="@dimen/scroll_padding" />
        </LinearLayout>
        <ExpandableListView android:id="@id/expandableListView"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="@dimen/switch_padding"
                            android:divider="@android:color/darker_gray"
                            android:dividerHeight="0.0dp"
                            android:layoutDirection="rtl"
                            android:indicatorEnd="?android:attr/expandableListPreferredItemIndicatorRight" />
        <TextView android:id="@id/os_release_notes"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/layout_margin_top"
                  style="@style/TextAppearance.MaterialComponents.Body2" />
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
  <com.google.android.material.button.MaterialButton android:gravity="center"
                        android:layout_gravity="bottom|center|end"
                        android:id="@id/update_status_ok"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/switch_padding"
                        android:text="@string/got_it"
                        android:layout_marginStart="@dimen/paragraph_spacing"
                        android:layout_marginEnd="@dimen/paragraph_spacing"
                        ota:cornerRadius="@dimen/button_corner_radius"
                        style="@style/MaterialButtonColoredStyle" />
</LinearLayout>