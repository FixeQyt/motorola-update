<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:layout_gravity="center"
              android:orientation="vertical"
              android:background="@color/background_color"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ota="http://schemas.android.com/apk/res-auto">
  <TextView android:textStyle="bold"
            android:id="@id/txtDialogTitle"
            android:paddingTop="@dimen/alert_dialog_padding"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/alert_dialog_padding"
            android:paddingEnd="@dimen/alert_dialog_padding"
            style="?android:attr/textAppearanceLarge" />
  <ScrollView android:scrollbarSize="@dimen/scrollbar_size"
              android:layout_width="fill_parent"
              android:layout_height="0.0dp"
              android:layout_weight="1.0"
              android:fadeScrollbars="false">
    <TextView android:id="@id/txtMessage"
              android:paddingTop="@dimen/switch_padding"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              style="@style/PopUpBodyText" />
  </ScrollView>
  <LinearLayout android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/textview_margin_start"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:paddingStart="@dimen/alert_dialog_padding"
                android:paddingEnd="@dimen/alert_dialog_padding">
    <Button android:layout_gravity="start"
            android:id="@id/btnNeutral"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/alert_dialog_padding"
            style="@style/PopUpButtonText" />
    <Button android:textStyle="bold"
            android:gravity="center"
            android:id="@id/btnNegative"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingStart="@dimen/activity_left_margin"
            android:paddingEnd="@dimen/activity_left_margin"
            style="@style/MaterialButtonNoStyle" />
    <com.google.android.material.button.MaterialButton android:textStyle="bold"
                          android:gravity="center"
                          android:layout_gravity="center_horizontal"
                          android:id="@id/btnPositive"
                          android:visibility="gone"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1.0"
                          ota:cornerRadius="@dimen/button_corner_radius"
                          style="@style/MaterialButtonColoredStyle" />
  </LinearLayout>
</LinearLayout>